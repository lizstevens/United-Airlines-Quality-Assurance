<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/editOrViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="20sp"
        android:paddingBottom="20sp"
        android:text="@string/edit_or_view_audit"
        android:textColor="@color/UnitedBlue"
        android:textSize="24sp"
        android:textStyle="bold" />


    <SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editOrViewTitle"
        android:queryHint="@string/select_name" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_editaudit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/searchView"
        android:paddingTop="10sp" />
</RelativeLayout>