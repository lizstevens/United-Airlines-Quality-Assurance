<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/UnitedBlue"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:subtitleTextColor="#F6F5F5"
        app:title="Quality Assurance Technical Operations Audit"
        app:titleTextColor="#FFFFFF" />

    <LinearLayout
        android:id="@+id/audi_specs_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">


        <Button
            android:id="@+id/saveAuditSpecs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/UnitedBlue"
            android:text="@string/save_audit_specs"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/saveInProcess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/UnitedBlue"
            android:text="Save In Process"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/auditTabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/auditSpecsTabItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/audit_info" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/checklistTabItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/checklist" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/inProcessTabItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/in_process" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tableDataTabItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/table_data" />
    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>