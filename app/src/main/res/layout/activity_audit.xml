<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/DashBar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#4D6A6A6A">

        <ImageView
            android:id="@+id/unitedLogo"
            android:layout_width="140sp"
            android:layout_height="match_parent"
            android:layout_marginEnd="100sp"
            android:layout_weight="3"
            android:contentDescription="@string/desc_logo"
            app:srcCompat="@drawable/united_airlines_quality_assurance_logo" />

        <EditText
            android:id="@+id/editTextAuditTitle"
            android:layout_width="100sp"
            android:layout_height="match_parent"
            android:layout_marginEnd="20sp"
            android:layout_weight="8"
            android:autofillHints=""
            android:ems="10"
            android:hint="@string/auditName"
            android:inputType="textPersonName"
            android:text="@string/auditName"
            android:textAlignment="textEnd" />

        <ImageButton
            android:id="@+id/addMenuButton"
            android:layout_width="70sp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:scaleType="centerInside"
            android:src="@drawable/addbuttonicon"
            android:tint="@color/UnitedBlue" />

    </LinearLayout>

</RelativeLayout>