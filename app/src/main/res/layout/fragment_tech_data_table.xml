<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".table_data_sub_fragments.TechDataTableFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="12dp"
        android:visibility="visible"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/technicalData"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">


                <!--first table in the in the first in process sheet-->
                <TableLayout
                    android:id="@+id/tableTitleTech"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:stretchColumns="1">

                    <!--first row: header for first table in the in first in process sheet-->
                    <TableRow
                        android:id="@+id/tableTitleTechRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tableTitleTechText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="1dp"
                            android:layout_weight="1"
                            android:background="#b0b0b0"
                            android:padding="12dp"
                            android:text="@string/tech_data_table_title"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </TableRow>
                    <!--end-->

                    <!-- text for the first row headers-->
                </TableLayout>


                <TableLayout
                    android:id="@+id/tableTechData"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:stretchColumns="5">

                    <TableRow
                        android:id="@+id/tableTechHeadersRow"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="1dp">

                        <TextView
                            android:id="@+id/tdPartNum"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="1dp"
                            android:background="#b0b0b0"
                            android:padding="12dp"
                            android:text="@string/tech_data_table_h1"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tdManuf"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="1dp"
                            android:layout_weight="1"
                            android:background="#b0b0b0"
                            android:padding="12dp"
                            android:text="@string/tech_data_table_h2"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tdAta"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="1dp"
                            android:background="#b0b0b0"
                            android:padding="12dp"
                            android:text="@string/tech_data_table_h3"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tdRevLevel"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="1dp"
                            android:background="#b0b0b0"
                            android:padding="12dp"
                            android:text="@string/tech_data_table_h4"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tdRevDate"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="1dp"
                            android:background="#b0b0b0"
                            android:padding="12dp"
                            android:text="@string/tech_data_table_h5"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tdComments"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="1dp"
                            android:background="#b0b0b0"
                            android:padding="12dp"
                            android:text="@string/tech_data_table_h6"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/row1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <EditText
                            android:id="@+id/tdPartNumText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="1dp"
                            android:importantForAutofill="no" />

                        <EditText
                            android:id="@+id/tdManufText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="1dp"
                            android:importantForAutofill="no" />

                        <EditText
                            android:id="@+id/tdAtaText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="1dp"
                            android:importantForAutofill="no" />

                        <EditText
                            android:id="@+id/tdRevLevelText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="1dp"
                            android:importantForAutofill="no" />

                        <EditText
                            android:id="@+id/tdRevDateText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="1dp"
                            android:importantForAutofill="no" />

                        <EditText
                            android:id="@+id/tdCommentsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="1dp"
                            android:importantForAutofill="no" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/buttonRowTable1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:id="@+id/buttonTable1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="1dp"
                            android:importantForAutofill="no"
                            android:text="@string/add_row"
                            android:visibility="visible" />
                    </TableRow>

                </TableLayout>

            </LinearLayout>

        </HorizontalScrollView>

    </androidx.cardview.widget.CardView>

</LinearLayout>